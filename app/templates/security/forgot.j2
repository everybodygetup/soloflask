{% extends 'base.j2' %}
{% from 'macros/form.j2' import base_no_label, btn, render_field_errors %}
{% set title = 'Сброс пароля' %}
{% block content %}
<section class="jumbotron">
  <div class="container">
    <div class="jumbotron__wrapper">
      <h3 class="main__title title title--h2">Отправить инструкции по сбросу пароля</h3>
      <form class="form form--security" action="{{ url_for('scurity.forgot_password') }}" method="post"
        name="forgot_password_form">
        {{ forgot_password_form.hidden_tag() }}
        {{ render_field_errors(forgot_password_form.csrf_token) }}
        {{ base_no_label(forgot_password_form.email) }}
        {{ btn(forgot_password_form.submit, value='Отправить инструкции', class='button') }}
      </form>
      <footer class="main__footer">
        <p class="main__text"><a class="link" href="{{ url_for('security.login') }}">Вход</a>
        </p>
      </footer>
    </div>
  </div>
</section>
{% endblock %}
